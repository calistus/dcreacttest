<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/cloud"
            tools:context="com.devcenter.lagosweather.ui.WeatherFragment">
    <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorTransparentFilm"
                android:layout_margin="4dp"
                android:orientation="horizontal">
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                <TextView
                        android:text="Thursday 28th November, 2018"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_date"
                        android:layout_gravity="center_horizontal"
                        android:textSize="20dp"
                        android:textColor="@color/colorWhite"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:gravity="center_horizontal"/>
                <TextView
                        android:text="11:00"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_time"
                        android:textSize="50dp"
                        android:layout_gravity="center_horizontal"
                        android:textColor="@color/colorWhite"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:gravity="center_horizontal"/>

            </LinearLayout>
        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorTransparentFilm"
                android:layout_margin="4dp"
                android:orientation="vertical">
            <TextView
                    android:text="Partly Cloudy"
                    android:layout_width="376dp"
                    android:layout_height="27dp"
                    android:textColor="@color/colorWhite"
                    android:gravity="center_horizontal"
                    android:id="@+id/tv_decription"
                    android:textSize="18sp"/>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                    <TextView
                            android:text="32"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorWhite"
                            android:id="@+id/tv_temperature"
                            android:layout_margin="@dimen/activity_horizontal_margin"
                            android:textSize="50sp"
                            android:textAppearance="@style/TextAppearance.AppCompat.Headline"/>
                    <TextView
                            android:text="oC"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/tv_unit"
                            android:textColor="@color/colorWhite"
                            android:textSize="24sp"/>

                    <ImageView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_marginLeft="@dimen/activity_horizontal_margin"
                            android:layout_marginRight="@dimen/activity_horizontal_margin"
                            android:src="@drawable/ic_weather"
                            android:layout_margin="@dimen/activity_horizontal_margin"
                            android:id="@+id/img_weather"/>
                </LinearLayout>
            </LinearLayout>

            <TextView
                    android:id="@+id/tv_wind"
                    android:text="Wind Speed: 23m/s"
                    android:textColor="@color/colorWhite"
                    android:layout_width="374dp"
                    android:layout_height="27dp"
                    android:gravity="center_horizontal"
                    android:textSize="18sp"/>
        </LinearLayout>


        <RadioGroup
                android:id="@+id/rg_temperature"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp">
            <TextView
                    android:text="Temperature Unit"
                    android:textColor="@color/colorWhite"
                    android:layout_width="374dp"
                    android:layout_height="27dp"
                    android:textSize="18sp"/>
            <RadioButton
                    android:id="@+id/rb_celcius"
                    android:checked="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorWhite"
                    android:text="Celcius"/>
            <RadioButton
                    android:id="@+id/rb_kelvin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorWhite"
                    android:text="Kelvin"/>
            <RadioButton
                    android:id="@+id/rb_fahrenheit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorWhite"
                    android:text="Fahrenheit"/>

        </RadioGroup>
        <RadioGroup
                android:id="@+id/rg_wind_speed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                    android:text="Wind Speed Unit"
                    android:textColor="@color/colorWhite"
                    android:layout_width="374dp"
                    android:layout_height="27dp"
                    android:textSize="18sp"/>
            <RadioButton
                    android:id="@+id/rb_mph"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorWhite"
                    android:text="Mile per Hour"/>
            <RadioButton
                    android:id="@+id/rb_ms"
                    android:checked="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorWhite"
                    android:text="meters per second"/>

        </RadioGroup>
    </LinearLayout>

</android.support.v4.widget.NestedScrollView>
